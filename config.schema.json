{
    "pluginAlias": "SmartSprinklers",
    "headerDisplay": "Homebridge plugin for climate based adaptive irrigation sprinkler control. Default [values][range] mentioned in description.",
    "footerDisplay": "Created by Mayank - @mTry",
    "singular": false,
    
    "schema": {
      "type": "object",
      "properties": {
        "name": {
          "title": "Accessory Name:",
          "description": "Name for the accessory [Irrigation]",
          "type": "string",
          "required": true,
          "default": "Irrigation"
        },
        "zones": {
          "title": "Zones:",
          "description": "Number of Zones to expose. [6]",
          "type": "integer",
          "required": false,
          "default": "6"
        },
        "disableScheduling": {
          "title": "Disable Scheduling",
          "description": "Disable Scheduling Irrigation Cycles. [false]",
          "type": "boolean",
          "required": false,
          "default": false
        },
        "disableAdaptiveWatering": {
          "title": "Disable Adaptive Control",
          "description": "Disable if you dont want climate based adaptive calculations. [false]",
          "type": "boolean",
          "required": false,
          "default": false
        },
        "latitude": {
          "title": "Latitude:",
          "description": "Enter the latitude in decimals including '-' if in the southern hemisphere. [-90 - 90]",
          "type": "number",
          "required": true,
          "minimum": -90,
          "maximum": 90,
          "default": 0.0
        },
        "longitude": {
          "title": "Longitude:",
          "description": "Enter the longitude in decimals. [-180 - 180]",
          "type": "number",
          "required": true,
          "minimum": -180,
          "maximum": 180,
          "default": 0.0
        },
        "altitude": {
          "title": "Altitude:",
          "description": "Enter the altitude in meters. [0-10000]",
          "type": "number",
          "required": true,
          "minimum": 0,
          "maximum": 10000,
          "default": 0.0
        },
        "key": {
          "title": "API Key:",
          "description": "Enter your OpenWeatherMap API Key.",
          "type": "string",
          "required": true
        },
        "SolarRad": {
          "title": "Solar Irradiance:",
          "type": "array",
          "description": "Mean daily solar irradiance value for the month. Refer instructions.[6][kWh/m2/day]",
          "minItems": 1,
          "maxItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "SolarRad[0]": {
                "type": "number",
                "title": "Jan",
                "default": 6
              },
              "SolarRad[1]": {
                "type": "number",
                "title": "Feb",
                "default": 6
              },
              "SolarRad[2]": {
                "type": "number",
                "title": "Mar",
                "default": 6
              },
              "SolarRad[3]": {
                "type": "number",
                "title": "Apr",
                "default": 6
              },
              "SolarRad[4]": {
                "type": "number",
                "title": "May",
                "default": 6
              },
              "SolarRad[5]": {
                "type": "number",
                "title": "Jun",
                "default": 6
              },
              "SolarRad[6]": {
                "type": "number",
                "title": "Jul",
                "default": 6
              },
              "SolarRad[7]": {
                "type": "number",
                "title": "Aug",
                "default": 6
              },
              "SolarRad[8]": {
                "type": "number",
                "title": "Sep",
                "default": 6
              },
              "SolarRad[9]": {
                "type": "number",
                "title": "Oct",
                "default": 6
              },
              "SolarRad[10]": {
                "type": "number",
                "title": "Nov",
                "default": 6
              },
              "SolarRad[11]": {
                "type": "number",
                "title": "Dec",
                "default": 6
              }
            }
          }
        },
        "lowThreshold": {
          "title": "Lower Threshold Temperature:",
          "description": "Skip scheduling when forecasted minimum temperature falls below this. [10°C][4°C - 20°C]",
          "type": "number",
          "required": false,
          "minimum": 4,
          "maximum": 20,
          "default": 10
        },
        "highThreshold": {
          "title": "High Threshold Temperature:",
          "description": "Skip scheduling when forecasted maximum temperature stays below this. [20°C][10°C - 30°C]",
          "type": "number",
          "required": false,
          "minimum": 10,
          "maximum": 30,
          "default": 20
        },
        "rainThreshold": {
          "title": "Rain Threshold:",
          "description": "Skip scheduling if rain forecasted above this level. [2.5mm][0mm - 100mm]",
          "type": "number",
          "required": false,
          "minimum": 0,
          "maximum": 100,
          "default": 2.5
        },
        "defaultDuration": {
          "title": "Default Watering Duration per zone:",
          "description": "Default total watering time per zone (minutes). [20][0 - 500]",
          "type": "number",
          "required": false,
          "minimum": 0,
          "maximum": 500,
          "default": 20
        },
        "maxDuration": {
          "title": "Maximum Watering Duration per zone:",
          "description": "Maximum limit for adaptive schedule per zone (minutes). [30][0 - 500]",
          "type": "number",
          "required": false,
          "minimum": 0,
          "maximum": 500,
          "default": 30
        },
        "cycles": {
          "title": "Cycles per zone:",
          "description": "Number of cycles per zone (watering is spread between cycles). [2][1 - 5]",
          "type": "number",
          "required": false,
          "minimum": 1,
          "maximum": 5,
          "default": 2
        },
        "sunriseOffset": {
          "title": "Sunrise Offest:",
          "description": "Minutes before the sunrise watering should get over by.",
          "type": "number",
          "required": false,
          "minimum": -1440,
          "maximum": 1440,
          "default": 0
        },
        "restrictedDays": {
          "type": "array",
          "description": "Watering will not be scheduled on the checked days - this overrides the zone % setting.",
          "minItems": 1,
          "maxItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "restrictedDays[0]": {
                "type": "boolean",
                "title": "Sunday"
              },
              "restrictedDays[1]": {
                "type": "boolean",
                "title": "Monday"
              },
              "restrictedDays[2]": {
                "type": "boolean",
                "title": "Tuesday"
              },
              "restrictedDays[3]": {
                "type": "boolean",
                "title": "Wednesday"
              },
              "restrictedDays[4]": {
                "type": "boolean",
                "title": "Thursday"
              },
              "restrictedDays[5]": {
                "type": "boolean",
                "title": "Friday"
              },
              "restrictedDays[6]": {
                "type": "boolean",
                "title": "Saturday"
              }
            }
          }
        },
        "restrictedMonths": {
          "type": "array",
          "description": "Watering will not be scheduled during the checked months - this overrides all other the zone setting.",
          "minItems": 1,
          "maxItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "restrictedMonths[0]": {
                "type": "boolean",
                "title": "Jan"
              },
              "restrictedMonths[1]": {
                "type": "boolean",
                "title": "Feb"
              },
              "restrictedMonths[2]": {
                "type": "boolean",
                "title": "Mar"
              },
              "restrictedMonths[3]": {
                "type": "boolean",
                "title": "Apr"
              },
              "restrictedMonths[4]": {
                "type": "boolean",
                "title": "May"
              },
              "restrictedMonths[5]": {
                "type": "boolean",
                "title": "Jun"
              },
              "restrictedMonths[6]": {
                "type": "boolean",
                "title": "Jul"
              },
              "restrictedMonths[7]": {
                "type": "boolean",
                "title": "Aug"
              },
              "restrictedMonths[8]": {
                "type": "boolean",
                "title": "Sep"
              },
              "restrictedMonths[9]": {
                "type": "boolean",
                "title": "Oct"
              },
              "restrictedMonths[10]": {
                "type": "boolean",
                "title": "Nov"
              },
              "restrictedMonths[11]": {
                "type": "boolean",
                "title": "Dec"
              }
            }
          }
        }          
      }
    },
    "nonDefaultFormItems": [],
    "customFormItems": {
    }
  }